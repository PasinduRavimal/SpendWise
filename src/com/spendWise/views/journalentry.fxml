<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #eeccff;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spendWise.controllers.JournalEntryController">
<VBox spacing="10" alignment="TOP_CENTER">
    <Label text="General Journal Entry" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <HBox spacing="5" alignment="CENTER">
        <Label text="Month:"/>
        <TextField fx:id="monthTextField" promptText="Enter month"/>
        <Button text="Show" onAction="#handleShowButtonClick"/>
    </HBox>
    
    <TableView fx:id="journalTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="transactionIdColumn" text="Transaction ID"/>
            <TableColumn fx:id="dateColumn" text="Date"/>
            <TableColumn fx:id="accountIdColumn" text="Account ID"/>
            <TableColumn fx:id="typeColumn" text="Type"/>
            <TableColumn fx:id="amountColumn" text="Amount"/>
        </columns>
    </TableView>
</VBox>
</AnchorPane>
